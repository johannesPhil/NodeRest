{
  "name": "restapi",
  "version": "1.0.0",
  "description": "Restful web services with node and express",
  "main": "server.js",
  "scripts": {
    "lint": "eslint .",
    "start": "nodemon server.js",
    "test": "mocha tests/**/*Tests.js"
  },
  "keywords": [
    "api",
    "rest"
  ],
  "author": "johannes",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.13",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "mocha": "^9.1.3",
    "should": "^13.2.3",
    "sinon": "^12.0.1",
    "supertest": "^6.1.6"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "1500",
    "env": {
